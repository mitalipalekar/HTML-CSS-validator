{
	"manifest_version": 2,

	"name": "HTML and CSS Validator",
	"description": "This extension determines whether valid HTML and CSS code has been written",
	"version": "1.0",

	"icons": {
		//needs to be added
	},
	"background": {
		"scripts": ["background.js"],
		"persistence": "false"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",         
		"default_title": "HTML and CSS Validator"
	},
	"content_scripts": [
		{
		"matches": ["https://*/*", "http://*/*"],
		"js": ["contentScript.js"]
		}
	],
	"permissions": [
		"<all_urls>",
		"tabs"
	]
}